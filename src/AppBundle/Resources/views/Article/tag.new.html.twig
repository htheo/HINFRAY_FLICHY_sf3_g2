{% extends ('::base.html.twig') %}

{% block steelsheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() ~ '- Tags' }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="col-md-8 col-md-offset-2">
        <h2>Nouvel Article</h2>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form.title,  { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.content,  { 'attr': {'class': 'form-control', 'placeholder': 'Contenu'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.author,  { 'attr': {'class': 'form-control', 'placeholder': 'Auteur'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.tag,  { 'attr': {'class': 'form-control', 'placeholder': 'Tag'} }) }}
        </div>
        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-sucess'} }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

